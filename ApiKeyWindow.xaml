<Window x:Class="Nexus_Omok_Game.ApiKeyWindow"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OpenAI API 키 설정" 
  Height="400" Width="550"
  WindowStartupLocation="CenterOwner"
        Background="#F5F5DC"
     ResizeMode="NoResize">
    <Grid Margin="20">
<Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
   <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
     <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
  </Grid.RowDefinitions>

   <!-- Title -->
  <TextBlock Grid.Row="0" 
  Text="ChatGPT AI를 사용하려면 OpenAI API 키가 필요합니다."
  TextWrapping="Wrap"
      FontSize="16"
    FontWeight="SemiBold"
  Margin="0,0,0,20"/>

 <!-- API Key Input -->
 <TextBlock Grid.Row="1" 
        Text="API 키:"
     FontWeight="Bold"
       FontSize="14"
 Margin="0,0,0,5"/>

  <PasswordBox x:Name="ApiKeyBox" 
       Grid.Row="2"
    FontSize="14"
       Height="35"
     Margin="0,0,0,10"/>

  <!-- Save Checkbox -->
  <CheckBox x:Name="SaveKeyCheckBox" 
      Grid.Row="3"
    Content="API 키 저장 (안전하게 암호화됨)"
 IsChecked="True"
  FontSize="13"
       Margin="0,0,0,15"/>

  <!-- Instructions -->
     <Border Grid.Row="4" 
      Background="#E3F2FD"
      BorderBrush="#2196F3"
  BorderThickness="2"
     CornerRadius="5"
    Padding="15"
      Margin="0,0,0,15">
        <StackPanel>
      <TextBlock Text="💡 API 키 발급 방법" 
     FontWeight="Bold"
FontSize="14"
    Margin="0,0,0,10"/>
            
    <TextBlock TextWrapping="Wrap" FontSize="12" Margin="0,2">
          <Run Text="1. "/>
  <Hyperlink NavigateUri="https://platform.openai.com/api-keys" 
          RequestNavigate="Hyperlink_RequestNavigate">
      https://platform.openai.com/api-keys
      </Hyperlink>
  <Run Text=" 방문"/>
       </TextBlock>
            
     <TextBlock Text="2. OpenAI 계정으로 로그인" 
      FontSize="12" 
     Margin="0,2"/>
     
       <TextBlock Text="3. 'Create new secret key' 버튼 클릭" 
       FontSize="12" 
        Margin="0,2"/>
     
      <TextBlock Text="4. 생성된 키를 복사하여 위 입력란에 붙여넣기" 
  FontSize="12" 
    Margin="0,2"/>
  
  <TextBlock Text="5. 저장 체크박스를 선택하면 다음번에 다시 입력할 필요 없음" 
FontSize="12" 
 Margin="0,2"
    Foreground="#1976D2"/>
  </StackPanel>
   </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" 
    Orientation="Horizontal" 
  HorizontalAlignment="Right">
 <Button x:Name="OkButton"
   Content="확인" 
   Width="100" 
   Height="35"
       FontSize="14"
       Margin="0,0,10,0"
  Click="OkButton_Click"/>
        
      <Button x:Name="CancelButton"
     Content="취소" 
   Width="100" 
    Height="35"
      FontSize="14"
   Click="CancelButton_Click"/>
        </StackPanel>
  </Grid>
</Window>
