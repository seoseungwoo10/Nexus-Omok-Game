<Window x:Class="Nexus_Omok_Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nexus_Omok_Game"
        mc:Ignorable="d"
        Title="Nexus Omok Game" Height="700" Width="800"
        Background="#F5F5DC">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="#8B4513" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="CurrentTurnText" 
                          Grid.Column="0"
                          Text="Current Turn: ⚫ (Black)" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="White"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Left"
                          Margin="10,0,0,0"/>
                
                <Button x:Name="NewGameButton" 
                       Grid.Column="1"
                       Content="🔄 New Game" 
                       FontSize="18" 
                       FontWeight="Bold"
                       Padding="15,5"
                       Background="#FFD700"
                       BorderBrush="#B8860B"
                       BorderThickness="2"
                       Cursor="Hand"
                       Click="NewGameButton_Click"/>
            </Grid>
        </Border>

        <!-- Game Board Section -->
        <Viewbox Grid.Row="1" Margin="20">
            <Canvas x:Name="GameCanvas" 
                    Width="600" 
                    Height="600" 
                    Background="#DEB887"
                    MouseLeftButtonDown="GameCanvas_MouseLeftButtonDown"
                    MouseMove="GameCanvas_MouseMove"
                    MouseLeave="GameCanvas_MouseLeave"/>
        </Viewbox>

        <!-- Status Section -->
        <Border Grid.Row="2" Background="#8B4513" Padding="10">
            <TextBlock x:Name="StatusText" 
                      Text="Welcome to Nexus Omok Game! Black plays first." 
                      FontSize="20" 
                      FontWeight="SemiBold" 
                      Foreground="White"
                      TextAlignment="Center"
                      VerticalAlignment="Center"
                      TextWrapping="Wrap"/>
        </Border>
    </Grid>
</Window>
