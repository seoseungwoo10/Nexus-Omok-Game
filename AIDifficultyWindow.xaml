<Window x:Class="Nexus_Omok_Game.AIDifficultyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AI 난이도 선택" 
        Height="650" Width="500"
        WindowStartupLocation="CenterOwner"
      Background="#F5F5DC"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
     <RowDefinition Height="*"/>
  <RowDefinition Height="Auto"/>
   <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

  <!-- Title -->
        <TextBlock Grid.Row="0" 
              Text="🤖 AI 난이도를 선택하세요" 
 FontSize="24" 
         FontWeight="Bold" 
       HorizontalAlignment="Center"
              Margin="0,0,0,20"/>

        <!-- Difficulty Options -->
 <StackPanel Grid.Row="1" VerticalAlignment="Center">

            <!-- 쉬움 -->
            <RadioButton x:Name="EasyRadio" 
      GroupName="Difficulty"
             IsChecked="True"
         Margin="0,10">
      <StackPanel>
 <TextBlock Text="⚪ 쉬움 (Easy)" 
    FontSize="18" 
    FontWeight="Bold"/>
  <TextBlock Text="  초보자에게 적합. AI 승률 40% (실수 10%)" 
         FontSize="14" 
            Foreground="Gray"
                  Margin="0,5,0,0"/>
       </StackPanel>
       </RadioButton>

      <!-- 보통 -->
<RadioButton x:Name="NormalRadio" 
       GroupName="Difficulty"
    Margin="0,10">
   <StackPanel>
           <TextBlock Text="🟡 보통 (Normal)" 
       FontSize="18" 
  FontWeight="Bold"/>
             <TextBlock Text="  중급자에게 적합. AI 승률 50% (전략적 플레이)" 
      FontSize="14" 
       Foreground="Gray"
                Margin="0,5,0,0"/>
          </StackPanel>
       </RadioButton>

            <!-- 어려움 -->
            <RadioButton x:Name="HardRadio" 
  GroupName="Difficulty"
        Margin="0,10">
          <StackPanel>
       <TextBlock Text="🔴 어려움 (Hard)" 
             FontSize="18" 
             FontWeight="Bold"/>
           <TextBlock Text="  고수에게 도전적. AI 승률 70% (4수 앞 예측)" 
  FontSize="14" 
      Foreground="Gray"
                  Margin="0,5,0,0"/>
    </StackPanel>
            </RadioButton>

   <!-- ChatGPT -->
            <RadioButton x:Name="ChatGPTRadio" 
         GroupName="Difficulty"
                   Margin="0,10">
          <StackPanel>
       <TextBlock Text="🤖 ChatGPT AI (Premium)" 
 FontSize="18" 
    FontWeight="Bold"
          Foreground="#2E7D32"/>
  <TextBlock Text="  최첨단 AI. 승률 80%, 전략 설명 제공 (API 키 필요)" 
  FontSize="14" 
                Foreground="Gray"
          Margin="0,5,0,0"/>
        </StackPanel>
         </RadioButton>

   <!-- Rapfi ⭐ 신규 -->
     <RadioButton x:Name="RapfiRadio" 
             GroupName="Difficulty"
      Margin="0,10"
                  Checked="RapfiRadio_Checked"
               Unchecked="RapfiRadio_Unchecked">
          <StackPanel>
     <TextBlock Text="🚀 Rapfi Engine (World Class)" 
        FontSize="18" 
  FontWeight="Bold"
        Foreground="DarkRed"/>
      <TextBlock Text="  세계 최강 오목 엔진 (프로 수준)" 
  FontSize="14" 
        Foreground="DarkRed"
     FontWeight="Bold"
    Margin="0,2,0,0"/>
      <TextBlock Text="  Gomocup 2023 우승 엔진" 
     FontSize="12" 
Foreground="Gray"
       Margin="0,2,0,0"/>
  </StackPanel>
          </RadioButton>

       <!-- Rapfi 강도 선택 -->
     <StackPanel x:Name="RapfiStrengthPanel" 
     Margin="30,5,0,0" 
         Visibility="Collapsed">
            <TextBlock Text="강도 레벨:" 
       FontWeight="Bold" 
       FontSize="14"
        Margin="0,0,0,5"/>
      <ComboBox x:Name="RapfiStrengthCombo" 
                Width="250" 
   HorizontalAlignment="Left"
      FontSize="14">
     <ComboBoxItem Content="🌱 초급 (Beginner) - 승률 30%" Tag="Beginner"/>
    <ComboBoxItem Content="📚 중급 (Intermediate) - 승률 60%" Tag="Intermediate" IsSelected="True"/>
        <ComboBoxItem Content="⚡ 고급 (Advanced) - 승률 80%" Tag="Advanced"/>
     <ComboBoxItem Content="🎯 마스터 (Master) - 승률 90%" Tag="Master"/>
      <ComboBoxItem Content="👑 그랜드마스터 - 승률 95%" Tag="GrandMaster"/>
            </ComboBox>
        </StackPanel>

        </StackPanel>

   <!-- API Key Button -->
    <StackPanel Grid.Row="2" 
     Margin="0,10,0,10">
   <Button x:Name="ApiKeyButton" 
     Content="🔑 OpenAI API 키 설정" 
         Width="200" 
    Height="35"
        FontSize="14"
    HorizontalAlignment="Center"
         Click="ApiKeyButton_Click"/>
 <TextBlock x:Name="ApiKeyStatusText"
   Text="저장된 API 키 없음"
       FontSize="12"
         Foreground="Gray"
        HorizontalAlignment="Center"
 Margin="0,5,0,0"/>
        </StackPanel>

  <!-- Buttons -->
        <StackPanel Grid.Row="3" 
           Orientation="Horizontal" 
          HorizontalAlignment="Center"
      Margin="0,10,0,0">
            <Button x:Name="ConfirmButton" 
     Content="확인" 
 Width="100" 
        Height="35"
    FontSize="16"
                    Margin="0,0,10,0"
      Click="ConfirmButton_Click"/>
         <Button x:Name="CancelButton" 
                Content="취소" 
       Width="100" 
            Height="35"
           FontSize="16"
  Click="CancelButton_Click"/>
    </StackPanel>
  </Grid>
</Window>
